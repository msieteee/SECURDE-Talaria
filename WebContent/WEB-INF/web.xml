<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>StartServlet</servlet-name>
        <servlet-class>controller.Controller</servlet-class>
	</servlet>
    <welcome-file-list>
        <welcome-file>StartServlet</welcome-file>
    </welcome-file-list>
    <session-config>
        <session-timeout>30</session-timeout>
        <tracking-mode>COOKIE</tracking-mode>
    </session-config>
    
    <filter>
	    <filter-name>XFrameFilter</filter-name>
	    <filter-class>security.XFrameFilter</filter-class>
	</filter>
	<filter-mapping>
	    <filter-name>XFrameFilter</filter-name>
	    <url-pattern>*</url-pattern>
	</filter-mapping>
	<filter>
	    <filter-name>ValidateSalt</filter-name>
	    <filter-class>security.ValidateSalt</filter-class>
	</filter>
	<filter-mapping>
	    <filter-name>ValidateSalt</filter-name>
	    <url-pattern>*</url-pattern>
	</filter-mapping>
	<filter>
	    <filter-name>LoadSalt</filter-name>
	    <filter-class>security.LoadSalt</filter-class>
	</filter>
	<filter-mapping>
	    <filter-name>LoadSalt</filter-name>
	    <url-pattern>*</url-pattern>
	</filter-mapping>
</web-app>
